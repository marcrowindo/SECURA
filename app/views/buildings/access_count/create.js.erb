// Sliding out the previous card
previousCard = document.querySelector('.container-content-access-count-page')
previousCard.classList.add('slideOutLeft');
setTimeout(function() {
  previousCard.style.display = 'none'
}, 500)

// Sliding in the new card
mainContainer = document.querySelector('.main-container')
function renderFloorsPartial(partial) {
  mainContainer.insertAdjacentHTML('beforeend', partial)
}
setTimeout(function() {
  renderFloorsPartial('<%= j render "shared/emergency_response_new", building: @building, request: @request %>') // What is happening?
  newCard = document.querySelector('.container-content-emergency-reponse-page')
  newCard.classList.add('slideInRight')
}, 1000)

// Update the URL (change history)
history.pushState(null, null, '/buildings/<%= @building.id %>/emergency_response')

// Update progress bar to 90%
progressBar.style.width = '90%'
