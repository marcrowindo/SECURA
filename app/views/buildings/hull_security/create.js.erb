// Sliding out the previous card
previousCard = document.querySelector('.container-content-hull-security-page')
previousCard.classList.add('slideOutLeft');
setTimeout(function() {
  previousCard.style.display = 'none'
}, 500)

// Sliding in the new card
mainContainer = document.querySelector('.main-container')
function renderFloorsPartial(partial) {
  mainContainer.insertAdjacentHTML('beforeend', partial)
}
setTimeout(function() {
  renderFloorsPartial('<%= j render "shared/door_new", building: @building, floors: @floors %>') // What is happening?
  newCard = document.querySelector('.container-content-doors-page')
  newCard.classList.add('slideInRight')
}, 1500)

// Update the URL (change history)
history.pushState(null, null, '/buildings/<%= @building.id %>/floors/doors')

// Update progress bar to 40%
progressBar.style.width = '40%'