<!-- PAGE 4 - FORM hull security -->

<div class="wrapper">
  <div class="main-container">

    <!-- Logo, phone and FAQ bar -->
    <div class="container-logo-help">
      <div class="container-logo">
        <%= link_to root_path do %>
        <%= image_tag "SECURA logo-blue.png" %>
        <% end %>
      </div>

      <!-- Progress bar -->
      <div class="container-progress">
        <div id="rootwizard">
          <div id="bar" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
            </div>
          </div>
        </div>
      </div>

      <div class="container-help">
        <p><i class="fas fa-phone"></i>     0176 700 166 02</p>
        <a data-toggle="modal" data-target="#exampleModalCenter">FAQ</a>
      </div>
    </div>

    <!-- Price estimate  -->
    <div class="container-content">
      <div class="container-form-content-hull">
        <div class="container-price-estimate">
        </div>
      </div>

      <div class="form-heading">
        <h2>Would you like to be at home whilst the system is active?</h2>
      </div>


      <!-- Form content  -->
      <div class="form-on-every-page">

        <h6>Click <a data-toggle="modal" data-target="#exampleModalCenter">here</a> for a brief explanation.</h6>

        <%= simple_form_for @building, url: building_hull_security_path(@building), method: :patch do |f| %>

        <%= f.input :security_hull, collection: ["Yes", "No"], as: :radio_buttons, :checked => ["Yes", true] %>
      </div>

      <div class="form-buttons-on-every-page">
       <a href="#" id="button-back">Back</a>
       <%= f.button :submit, "Next", id: "button-next" %>
       <% end %>
     </div>

   </div>

