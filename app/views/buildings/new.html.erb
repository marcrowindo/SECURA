<!-- PAGE 2 - FORM Buildings -->

<div class="wrapper">
  <div class="main-container">

    <!-- Logo, phone and FAQ bar -->
    <div class="container-logo-help">
      <div class="container-logo">
        <%= link_to root_path do %>
        <%= image_tag "SECURA logo-blue.png" %>
        <% end %>
      </div>

      <!-- Progress bar -->
      <div class="container-progress">
        <div id="rootwizard">
          <div id="bar" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
          </div>
        </div>
      </div>

      <div class="container-help">
        <p><i class="fas fa-phone"></i>     0176 700 166 02</p>
        <a data-toggle="modal" data-target="#exampleModalCenter">FAQ</a>
      </div>
    </div>


    <!-- Price estimate  -->
    <div class="container-content-buildings-page">
      <div class="container-form-content-building">
        <div class="container-price-estimate">
        </div>
      </div>

      <div class="form-heading-buildings-page">
        <h2>What would you like to secure?</h2>
      </div>

      <!-- Radio buttons -->
      <div class="form-icons-buildings-page">
        <%= simple_form_for [@request, @building] do |b| %>
        <label class="form-icon-house">
          <input type="radio" name="building[object_type]" value="house">
          <img src="<%= image_url('house.png') %>" alt="house">
          <p class="icon-text-house">House</p>
        </label>

        <label class="form-icon-apartment">
          <input type="radio" name="building[object_type]" value="apartment" />
          <img src="<%= image_url('apartment.png') %>" alt="apartment">
          <p class="icon-text-apartment">Apartment</p>
        </label>

        <label class="form-icon-office">
          <input type="radio" name="building[object_type]" value="office" />
          <img src="<%= image_url('office.png') %>" alt="office">
          <p class="icon-text-office">Office</p>
        </label>
      </div>

      <!-- Insert email field -->
      <div class="form-give-us-email">
        <h6>To continue, please provide your email below</h6>

        <%= b.simple_fields_for :user do |u| %>
        <%= u.input :email, placeholder: "Your email", label_html: { class: 'white-email-label' } %>
        <% end %>
        <p>Your data will not be used by any third parties without your explicit consent. <br>Refer to our privacy policy <a data-toggle="modal" data-target="#exampleModalCenter">here</a>.</p>
      </div>

      <!-- Buttons back and next -->
      <div class="form-buttons-buildings-page">
        <a href="#" id="button-back">Back</a>
        <%= b.button :submit, "Next", id: "button-next" %>
        <% end %>
      </div>
    </div>

<!--   <div class="copyright">
