// Sliding out the previous card
previousCard = document.querySelector('.container-content-floors-page')
previousCard.classList.add('slideOutLeft');
setTimeout(function() {
  previousCard.style.display = 'none'
}, 500)

// Sliding in the new card
mainContainer = document.querySelector('.main-container')
function renderFloorsPartial(partial) {
  mainContainer.insertAdjacentHTML('beforeend', partial)
}
setTimeout(function() {
  renderFloorsPartial('<%= j render "shared/hull_security_new", building: @building %>')
  newCard = document.querySelector('.container-content-hull-security-page')
  newCard.classList.add('slideInRight')
}, 1000)

// Update the URL (change history)
history.pushState(null, null, '/buildings/<%= @building.id %>/hull_security')

// Update progress bar to 30%
progressBar.style.width = '30%'