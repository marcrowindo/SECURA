// Sliding out the previous card
previousCard = document.querySelector('.container-content-doors-page')
previousCard.classList.add('slideOutLeft');
setTimeout(function() {
  previousCard.style.display = 'none'
}, 500)

// Sliding in the new card
mainContainer = document.querySelector('.main-container')
function renderFloorsPartial(partial) {
  mainContainer.insertAdjacentHTML('beforeend', partial)
}
setTimeout(function() {
  renderFloorsPartial('<%= j render "shared/window_new", building: @building, request: @request, floors: @floors %>')
  newCard = document.querySelector('.container-content-windows-page')
  newCard.classList.add('slideInRight')
}, 800)

// Update the URL (change history)
history.pushState(null, null, '/buildings/<%= @building.id %>/floors/windows')
