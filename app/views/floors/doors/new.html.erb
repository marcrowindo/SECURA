<!-- PAGE 2 - FORM Buildings (and rest of the funnel) -->
<div class="wrapper">
  <div class="main-container">

<!-- Logo, phone and FAQ bar -->
<div class="container-logo-help">
  <div class="container-logo">
    <%= link_to root_path do %>
    <%= image_tag "secura-logo-blue.png" %>
    <% end %>
  </div>

  <!-- Progress bar -->
  <div class="container-progress">
    <div id="rootwizard">
      <div id="bar" class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
        </div>
      </div>
    </div>
  </div>

  <div class="container-help">
    <p><i class="fas fa-phone"></i>     0176 700 166 02</p>
    <a data-toggle="modal" data-target="#exampleModalCenter">FAQ</a>
  </div>
</div>

<div class="container-content-doors-page animated" id="card-door-new">
  <div class="container-content">
    <div class="container-form-content-door">
      <div class="container-price-estimate">
      </div>
    </div>

    <div class="form-heading">
      <h2>How many doors leading outside do you have on this floor?</h2>
    </div>

    <!-- Form content  -->
    <div class="form-on-every-page">

    <%= form_tag building_doors_create_path(@building), remote: true do |f| %>
      <% @floors.each do |floor| %>
        <%= fields_for 'floors[]', floor do |p| %>
        <div class="field">
          <%= p.label floor.floor_type %><br>
          <%= p.text_field :doors %>
        </div>
        <% end %>
      <% end %>

      <div class="form-buttons-on-every-page">
        <a href="#" id="button-back">Back</a>
        <input name="commit" type="submit" value="Next" id="button-next" />
        <% end %>
      </div>

    </div>


  </div>
</div>


  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLongTitle"><strong>FAQ</strong></h5>

      </div>
      <div class="modal-body">
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestias cupiditate autem corrupti sequi, dolor a dignissimos dolores repellat, placeat atque nam voluptatibus quod in doloribus pariatur ratione tempora velit, illum.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
