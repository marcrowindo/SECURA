<!-- PAGE 6 - FORM windows -->

<div class="wrapper">
  <div class="main-container">

    <!-- Logo, phone and FAQ bar -->
    <div class="container-logo-help">
      <div class="container-logo">
        <%= link_to root_path do %>
        <%= image_tag "SECURA logo-blue.png" %>
        <% end %>
      </div>

      <!-- Progress bar -->
      <div class="container-progress">
        <div id="rootwizard">
          <div id="bar" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
            </div>
          </div>
        </div>
      </div>

      <div class="container-help">
        <p><i class="fas fa-phone"></i>     0176 700 166 02</p>
        <a data-toggle="modal" data-target="#exampleModalCenter">FAQ</a>
      </div>
    </div>

    <!-- Price estimate  -->
    <div class="container-content">
      <div class="container-form-content-window">
        <div class="container-price-estimate">
          <h6>Your current price range estimate:</h6>
          <h3><%= @request.price_min %> - <%= @request.price_max %> €</h3>
        </div>
      </div>

      <div class="form-heading">
        <h2>How many windows do you have on this floor?</h2>
      </div>


    <!-- Form content  -->
      <div class="form-on-every-page">

        <%= form_tag building_windows_create_path(@building) do %>
          <% @floors.each do |floor| %>
            <%= fields_for 'floors[]', floor do |p| %>
              <div class="field">
                <%= p.label floor.floor_type %><br>
                <%= p.text_field :windows %>
              </div>
            <% end %>
          <% end %>
      </div>

      <div class="form-buttons-on-every-page">
            <a href="#" id="button-back">Back</a>
            <input name="commit" type="submit" value="Next" id="button-next" />
          </div>
        <% end %>


    </div>

<!--   <div class="copyright">
    <p>Copyright © 2018 by Secura AG, all rights reserved</p>
  </div> -->

  </div>
</div>


