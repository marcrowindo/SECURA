<div class="wrapper">
  <div class="main-container">

    <!-- Logo, phone and FAQ bar -->
    <div class="container-logo-help">
      <div class="container-logo">
        <%= link_to root_path do %>
        <%= image_tag "SECURA logo-blue.png" %>
        <% end %>
      </div>

      <!-- Progress bar -->
      <div class="container-progress">
        <div id="rootwizard">
          <div id="bar" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
            </div>
          </div>
        </div>
      </div>

      <div class="container-help">
        <p><i class="fas fa-phone"></i>     0176 700 166 02</p>
        <a data-toggle="modal" data-target="#exampleModalCenter">FAQ</a>
      </div>
    </div>


    <div class="container-content-offer">
      <div class="container-price-recap">
        <h2><%= @quote.supplier_name %></h2>
        <h6><b>Thank you for trusting us, <%= @user.email %></b><br>
        Here is a summary of your request:</h6>

        <ul>
          <li><%= @request.building.object_type.capitalize %></li>
          <li>Floors: <%= @request.building.floors.count %></li>
          <li>VdS Certification: <%= @request.building.vds_certification %></li>
          <li>Security Hull: <%= @request.building.security_hull %></li>
          <li>Emergency Response: <%= @request.building.emergency_response %></li>
          <% @request.building.floors.each do |floor| %>
          <li><%= floor.floor_type %></li>
          <li>Windows: <%= floor.windows %></li>
          <li>Rooms: <%= floor.rooms %></li>
          <li>Doors <%= floor.doors %></li>
          <li>Sensors: <%= floor.windows_and_doors_sensor %></li>
          <% end %>
<!--           <li>Your range estimate came to <%= @request.price_min %> to <%= @request.price_max %>.</li> -->
        </ul>


      </div>
      <div class="container-offer-pay">
        <!-- <h6><b>Thank you for trusting us, <%= @user.email %></b>,<%= @quote.supplier_name %> has an offer to secure your <%= @request.building.object_type %> for </h4><br> -->

        <!-- <h4>Based on your request our trusted partner <%= @quote.supplier_name %> has an offer to secure your <%= @request.building.object_type %> for </h4><br> -->

        <div id="price"><%= humanized_money_with_symbol(@quote.price) %></div>
      <h6><span>Amount Due Today (20%): <%= humanized_money_with_symbol(@booking.amount) %></span></h6>


        <%= simple_form_for [@quote, @booking] do |f| %>
        <b><%= f.input :date, as: :string, input_html: { class: 'datedropper' } %></b>
        <%= f.submit "Confirm", input_html: { class: 'btn' } %>
        <% end %>






<!--         <h6><br>Contact them at: <br><%= @quote.supplier_name %></h6>
 -->        <!-- <h6>Address: <br><%= @quote.supplier_address %><br>
        Phone: <br><%= @quote.phone_number %></h6> -->
<!--       </div>
      <div class="container-offer-btn"> -->

      </div>
    </div>

  </div>
</div>
