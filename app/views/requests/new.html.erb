<%= flash[:not_allowed] %>

<div class="banner">
  <div class="banner-content">
    <h1>Home security made easy</h1>
    <h2>Get five offers from our trusted partners in five easy steps
    </h2>

    <!-- Insert ZIP code field -->
    <div class="form-inline">
      <%= simple_form_for  @request do |f|%>
      <%= f.input :zip_code, as: :integer, placeholder: "Your ZIP code", label_html: { class: 'white-email-label' } %>
      <%= f.submit "Get Offers", :class => "btn" %>
      <% end %>
    </div>
  </div>

  <!-- STEPS -->
  <div class="steps-container">
    <div class="step">
      <%= image_tag "Number1.png", class: "number" %>
      <%= image_tag "Step1.png", class: "icon" %>
      <p>Fill in our form</p>
    </div>
    <div class="step">
      <%= image_tag "Number2.png", class: "number" %>
      <%= image_tag "Step2.png", class: "icon" %>
      <p>Receive 5 offers</p>
    </div>
    <div class="step">
      <%= image_tag "Number3.png", class: "number" %>
      <%= image_tag "Step3.png", class: "icon" %>
      <p>Choose a provider</p>
    </div>
    <div class="step">
      <%= image_tag "Number4.png", class: "number" %>
      <%= image_tag "Step4.png", class: "icon" %>
      <p>Installation</p>
    </div>
  </div>

</div>

