
<!-- Price estimate  -->
<div class="container-content container-content-hull-security-page animated" id="card-hull-security-new">
  <div class="container-form-content-hull">
    <div class="container-price-estimate">
    </div>
  </div>

  <div class="form-heading">
    <h2>Would you like to be at home whilst the system is active?</h2>
  </div>

  <!-- Form content  -->
  <div class="form-floor">
    <div class="form-on-every-page">
      <h6>Click <a data-toggle="modal" data-target="#exampleModalCenter">here</a> for a brief explanation.</h6>

      <%= simple_form_for building, url: building_hull_security_path(building), method: :patch, remote: true do |f| %>

      <div class="styled-input-container">
        <div class="styled-input-single">
          <input type="radio" name="building[security_hull]" value="Yes" id="building_security_hull_yes" />
          <label for="building_security_hull_yes">Yes</label>
        </div>
        <br>
        <div class="styled-input-single">
          <input type="radio" name="building[security_hull]" value="No" id="building_security_hull_no" />
          <label for="building_security_hull_no">No</label>
        </div>
      </div>

      <%#= f.input :security_hull, collection: ["Yes", "No"], as: :radio_buttons, :checked => ["Yes", true] %>

      <div class="form-buttons-on-every-page">
       <a href="#" id="button-back">Back</a>
       <%= f.button :submit, "Next", id: "button-next" %>
       <% end %>
     </div>
   </div>
 </div>
</div>

