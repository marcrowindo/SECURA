
<p>
  <h1><%= @greeting %>, <%= @user.email %></h1>
<% @request.quotes.each do |quote| %>
  <li><%= link_to 'Book an appointment with this supplier!', quote_url(id: quote.id, token: quote.token) %></li>
  <li><%= quote.supplier_name %>
  <li><%= quote.supplier_address %>
  <li><%= quote.phone_number %></li>
  <li><%= quote.price %></li>
<% end %>
</p>